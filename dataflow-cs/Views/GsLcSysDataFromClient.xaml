<controls:MetroWindow x:Class="dataflow_cs.Views.GsLcSysDataFromClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dataflow_cs.Views"
        xmlns:vm="clr-namespace:dataflow_cs.ViewModel"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="数智设计——同步CAD数据" 
        Width="450" 
        Height="250"
        TitleCharacterCasing="Normal"
        BorderThickness="1"
        BorderBrush="{DynamicResource AccentColorBrush}"
        WindowStartupLocation="CenterScreen"
        GlowBrush="{DynamicResource AccentColorBrush}"
        NonActiveGlowBrush="{DynamicResource GrayBrush2}"
        ResizeMode="CanMinimize"
        IconTemplate="{x:Null}"
        ShowIconOnTitleBar="False"
        ShowCloseButton="True"
        ShowMaxRestoreButton="False"
        ShowMinButton="True"
        SaveWindowPosition="False">
    <controls:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colors.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseLight.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- 自定义样式 -->
            <Style x:Key="CustomMetroHeaderStyle" TargetType="{x:Type controls:MetroHeader}">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="{DynamicResource AccentColorBrush}" />
            </Style>
        </ResourceDictionary>
    </controls:MetroWindow.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部标题区域 -->
        <Border Grid.Row="0" Margin="0,0,0,10" 
                BorderBrush="{DynamicResource AccentColorBrush}"
                BorderThickness="0,0,0,1">
            <TextBlock 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="{DynamicResource AccentColorBrush}"
                       Margin="5,0,0,5"><Run Text="同步"/><Run Text="CAD数据"/></TextBlock>
        </Border>

        <!-- 中间内容 -->
        <controls:MetroHeader Grid.Row="1" Margin="10,0" 
                              Header="数据同步选项" 
                              FontSize="16"
                              FontWeight="Bold"
                              Background="{DynamicResource ControlBackgroundBrush}"
                              Foreground="{DynamicResource AccentColorBrush}">
            <Border BorderBrush="{DynamicResource GrayBrush5}" 
                    BorderThickness="1" 
                    Margin="0,10,0,0"
                    Padding="10"
                    Background="{DynamicResource WindowBackgroundBrush}"
                    controls:ControlsHelper.CornerRadius="3">
                <StackPanel>
                    <!-- 选择要导出的数据类型 -->
                    <DockPanel Margin="0,5,0,10">
                        <TextBlock Width="150" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"><Run Text="选择要"/><Run Language="zh-cn" Text="同步"/><Run Text="的数据类型:"/></TextBlock>
                        <ComboBox x:Name="DataTypeComboBox" 
                                Width="230"
                                HorizontalAlignment="Left"
                                controls:TextBoxHelper.Watermark="请选择数据类型"
                                controls:TextBoxHelper.UseFloatingWatermark="True"
                                BorderBrush="{DynamicResource AccentColorBrush}"
                                ItemsSource="{Binding DataTypes}" 
                                SelectedItem="{Binding SelectedDataType}"
                                DisplayMemberPath="Name"/>
                    </DockPanel>

                    <!-- 导出数据数量 -->
                    <DockPanel Margin="0,5,0,10"/>

                    <!-- 导出数据状态 -->
                    <DockPanel Margin="0,5,0,5">
                        <TextBlock Width="150" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"><Run Language="zh-cn" Text="同步"/><Run Text="数据状态:"/></TextBlock>
                        <TextBlock x:Name="DataStatusTextBlock" 
                                Text="{Binding DataStatus}" 
                                Width="250"
                                HorizontalAlignment="Left"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource AccentColorBrush}"
                                VerticalAlignment="Center"/>
                    </DockPanel>
                </StackPanel>
            </Border>
        </controls:MetroHeader>

        <!-- 底部按钮 -->
        <Grid Grid.Row="2" Margin="10,15,10,5">
            <UniformGrid Columns="2" HorizontalAlignment="Left">
                <Button x:Name="SelectButton" 
                        Width="100" Height="40" 
                        Margin="50,0"
                        Style="{DynamicResource AccentedSquareButtonStyle}"
                        Click="SelectButton_Click" Background="#CC119EDA">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M19,5V19H5V5H19Z M10,17L6,13L7.41,11.59L10,14.17L16.59,7.58L18,9"
                          Fill="{DynamicResource IdealForegroundColorBrush}"
                          Width="18" Height="18"
                          Stretch="Uniform"
                          Margin="0,0,5,0" />
                        <TextBlock Text="同步数据" />
                    </StackPanel>
                </Button>
                <Button x:Name="CancelButton" 
                        Width="100" Height="40"
                        Style="{DynamicResource SquareButtonStyle}"
                        Click="CancelButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"
                          Fill="{DynamicResource GrayBrush1}"
                          Width="18" Height="18"
                          Stretch="Uniform"
                          Margin="0,0,5,0" />
                        <TextBlock Text="取消" />
                    </StackPanel>
                </Button>
            </UniformGrid>
        </Grid>
    </Grid>
</controls:MetroWindow> 